@model IEnumerable<BookShopApplication.Models.Book>

@{

    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create" class="btn alert-primary">Create New</a>
</p>

<table class="table table-bordered table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
              <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
              <th>
                @Html.DisplayNameFor(model => model.Author.FullName)
            </th>
              <th>
                        <h6>Image : </h6>
            </th>
           
        </tr>
        
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                 <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                  <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Author.FullName)
                </td>
                <td>
                    @if(item.ImagUrl != null)
                    {
                       <img src="~/uploads/@item.ImagUrl" style="width:64px;" class="img-thumbnail" /> 
                    }
                </td>
               
                <td>
                    @Html.ActionLink("Edit","Edit",new {id = item.Id}) |
                    @Html.ActionLink("Details","Details",new {id = item.Id}) |
                    @Html.ActionLink("Delete","Delete",new {id = item.Id}) 

                </td>
            </tr>
        }
    </tbody>

</table>